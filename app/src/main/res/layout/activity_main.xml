<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_retrofit"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginRight="@dimen/space_50"
        android:text="retrofit请求"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_okhttp"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginRight="@dimen/space_50"
        android:text="okhttp请求"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_other"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginRight="@dimen/space_50"
        android:text="其它测试"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_BottomNavigationView"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginRight="@dimen/space_50"
        android:text="BottomNavigationView的使用"
        android:textAllCaps="false" />

</LinearLayout>