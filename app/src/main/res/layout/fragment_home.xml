<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_head_layout" />

    <Button
        android:id="@+id/btn_to_login_page"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginRight="@dimen/space_50"
        android:text="点我进入登录页面" />

    <Button
        android:id="@+id/btn_to_register_page"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginTop="@dimen/space_60"
        android:layout_marginRight="@dimen/space_50"
        android:text="点我进入注册页面" />

</LinearLayout>